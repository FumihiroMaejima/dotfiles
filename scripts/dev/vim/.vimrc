" Enable syntax highlighting
syntax enable

" Set the colorscheme
" color cheme list `:colorscheme` or ~/.vim/colors | /usr/share/vim/vimXX/colors
colorscheme desert

" Set the tab width to 4 spaces
set tabstop=4
set shiftwidth=4
set expandtab

" Enable line numbers
set number

" Enable auto-indentation
set autoindent

" Show Brackets Pair
set showmatch

" Enable mouse support In Vim
set mouse=a

" Enable searching as you type
set incsearch

" Enable case-insensitive searching (For UpperCase & LowerCase)
set ignorecase

" Enable smart case searching
" Enable Search Function For UpperCase & LowerCase
set smartcase


" Enable line wrapping
set wrap
